@inject IViewLocalizer Localizer
@using ExamenAdam.Identity.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@model EditUserAndRoleModel

<div>
    <h1 style="text-align: center">@Localizer["USER DETAILS"]</h1>
    <br />
    <form asp-controller="Management" asp-action="EditUserAndRole" asp-route-id="@Model.Id" >            
            <h4>@Localizer["Username:"]</h4>
            <h5>@Model.UserName</h5>
            <br />
            <h4>@Localizer["First & last name:"]</h4>
            <h5>@Model.FirstName @Model.LastName</h5>
            <br />
            <h4>Email:</h4>
            <h5>@Model.Email</h5>
            <br />
            <h5>@Localizer["User role:"]</h5>
            <select asp-for="RoleEdit.Name">
                <option selected value="@Model.RoleEdit.Name">@Model.RoleEdit.Name</option>
                @foreach(Role role in @Model.AllRoles)
                {
                    <option value="@role.Name">@role.Name</option>
                }                        
            </select>
            <br /><br />
            <h5>@Localizer["Approved:"]</h5>
            <select asp-for="@Model.Approved">
                <option selected value="@Model.Approved">@Model.Approved</option>
                <option value="true">@Localizer["true"]</option>
                <option value="false">@Localizer["false"]</option>                   
            </select>            
            <br />
            <br />
            <br />
            <button type="submit">Update!</button>
    </form>
    <br /><br /><br /><br /><br />


    <form asp-controller="Management" asp-action="DeleteUser" asp-route-id="@Model.Id" id="deleteform">
        <button type="submit">@Localizer["Delete user"]</button>
    </form>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $("body").on("submit", "#deleteform", function () {
            return confirm("CONFIRM?");
        });
    </script>

</div>